<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="idol.tofu.client.CheckReservationStep2Controller" prefHeight="150.0" prefWidth="300.0">
    <center>
        <VBox alignment="CENTER">
            <padding>
                <Insets topRightBottomLeft="5"/>
            </padding>
            <children>
                <Label fx:id="senter_heading" text="정말 예약을 취소하시겠습니까?"/>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets topRightBottomLeft="10"/>
            </padding>
            <children>
                <Button fx:id="cancelBtn" onAction="#handleCancelBtn" text="취소" />
                <Button fx:id="okBtn" onAction="#handleOkBtn" text="확인" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
