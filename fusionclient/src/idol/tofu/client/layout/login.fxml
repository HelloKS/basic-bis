<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane prefHeight="150.0" prefWidth="300.0" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="idol.tofu.client.LoginController">
   <padding>
      <Insets topRightBottomLeft="10.0"/>
   </padding>
   <children>
      <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" alignment="CENTER">
         <children>
            <Label text="회원 로그인" />
         </children>
      </HBox>
      <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="아이디" />
      <TextField fx:id="idField" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
      <Label GridPane.rowIndex="2" GridPane.columnIndex="0" text="비밀번호" />
      <PasswordField fx:id="pwField" GridPane.rowIndex="2" GridPane.columnIndex="1"  GridPane.hgrow="ALWAYS"/>
      <HBox GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" alignment="CENTER">
         <children>
            <Button fx:id="loginBtn" onAction="#handleLoginBtn" text="로그인" />
         </children>
      </HBox>
   </children>
</GridPane>
